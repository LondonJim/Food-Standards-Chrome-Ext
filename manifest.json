{
  "manifest_version": 2,
  "name": "Food Safety Checker",
  "version": "0.1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "geolocation",
    "storage",
    "webRequest",
    "https://www.ubereats.com/en-GB/*"
  ],

  "browser_action": {
    "default_popup": "./popup/food-checker.html"
  }

}
