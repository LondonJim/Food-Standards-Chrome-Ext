{
  "manifest_version": 2,
  "name": "Food Safety Checker",
  "version": "0.1.0",
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.ubereats.com/en-GB/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "browser_action": {
    "default_popup": "./popup/food-checker.html"
  }

}
